  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/pixi.js": "^4.7.2",
    "@types/react-dom": "16.0.4",
    "@types/webpack-env": "^1.13.5",
    "eslint": "^4.18.2",
