{
  "name": "zone-server",
  "version": "0.0.1",
  "description": "cool zone",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/main.js",
    "start-dev": "NODE_ENV=development nodemon -i './persist' dist/main.js",
    "dev": "npm-run-all -l build --parallel watch:ts start-dev",
    "clean": "rm -rf dist/",
    "build": "npm run clean && tsc",
    "test": "run-s -l test:*",
    "test:jest": "jest --colors",
    "test:ts": "tsc --noEmit",
    "test:eslint": "eslint .",
    "watch:ts": "tsc -w",
    "watch:test": "jest --colors --watch"
  },
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "dependencies": {
    "express": "^4.16.2",
    "level": "^3.0.0",
    "mobx-state-tree": "^2.0.4",
    "socket.io": "^2.0.4",
    "source-map-support": "^0.5.3",
    "minna": "*",
    "zone-shared": "*"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.1",
    "@types/leveldown": "^1.7.0",
    "@types/node": "^9.4.1",
    "@types/socket.io": "^1.4.33",
    "jest": "^22.1.4",
    "nodemon": "^1.14.12",
    "ts-jest": "^22.0.3",
    "typescript": "^2.8.1"
  },
  "engines": {
    "node": ">=9.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  }
}
