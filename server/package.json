{
  "name": "zone-server",
  "version": "0.0.1",
  "description": "cool zone",
  "private": true,
  "main": "dist/main.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/main.js",
    "start-dev":
      "NODE_ENV=development nodemon -i 'dist/.next/*' -i 'dist/pages/*' dist/main.js",
    "dev": "run-p -l watch:ts start-dev",
    "build": "rm -rf dist/ && tsc",
    "test": "run-s -l test:*",
    "test:jest": "jest --colors",
    "test:ts": "tsc --noEmit",
    "test:tslint": "tslint --project .",
    "watch:ts": "tsc -w",
    "watch:test": "jest --colors --watch"
  },
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "dependencies": {
    "envalid": "^4.1.2",
    "express": "^4.16.2",
    "source-map-support": "^0.5.3"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/node": "^9.4.1",
    "@types/validator": "^6.3.0",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-typescript": "^0.11.0",
    "nodemon": "^1.14.12",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.11.1",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.3",
    "typescript": "^2.7.2",
    "typescript-eslint-parser": "^14.0.0"
  },
  "engines": {
    "node": ">=9.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"]
  }
}
