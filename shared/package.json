{
  "name": "zone-shared",
  "version": "0.0.1",
  "description": "shared code between client and server",
  "private": true,
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "dev": "run-s -l build watch:ts",
    "clean": "rm -rf dist/",
    "build": "npm run clean && tsc",
    "test": "run-s -l test:*",
    "test:jest": "jest --colors",
    "test:ts": "tsc --noEmit",
    "test:eslint": "eslint .",
    "watch:ts": "tsc -w",
    "watch:test": "jest --colors --watch"
  },
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "dependencies": {
    "mobx-state-tree": "^2.0.4",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/uuid": "^3.4.3",
    "jest": "^22.1.4",
    "ts-jest": "^22.0.3",
    "typescript": "^2.8.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
