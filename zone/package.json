{
  "name": "zone",
  "version": "0.0.1",
  "description": "cool zone",
  "private": true,
  "main": "build/server/src/main.js",
  "scripts": {
    "start": "node build/server/src/main.js",
    "dev": "NODE_ENV=development ts-node-dev --project server/tsconfig.json server/src/main.ts",
    "build": "run-s -l build:*",
    "build:server": "tsc -p server/tsconfig.json",
    "build:copy": "cp -r server/static build/server/",
    "build:client": "webpack --colors --env.production --config ./client/webpack.config.js",
    "test": "run-s -l test:*",
    "test:jest": "jest --colors",
    "test:ts": "tsc --noEmit",
    "test:eslint": "eslint .",
    "watch:test": "jest --colors --watch"
  },
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "dependencies": {
    "bulma": "^0.7.1",
    "express": "^4.16.2",
    "level": "^4.0.0",
    "minna": "*",
    "mobx": "^4.1.1",
    "mobx-react": "^5.0.0",
    "mobx-state-tree": "^2.0.4",
    "mousetrap": "^1.6.1",
    "react": "16.4.0",
    "react-dom": "16.4.0",
    "react-draggable": "^3.0.5",
    "react-hammerjs": "^1.0.1",
    "react-hot-loader": "^4.2.0",
    "socket.io": "^2.0.4",
    "socket.io-client": "^2.0.4",
    "source-map-support": "^0.5.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.49",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.49",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.49",
    "@babel/preset-env": "^7.0.0-beta.49",
    "@babel/preset-react": "^7.0.0-beta.49",
    "@babel/preset-typescript": "^7.0.0-beta.49",
    "@types/express": "^4.11.1",
    "@types/leveldown": "^1.7.0",
    "@types/mousetrap": "^1.6.0",
    "@types/node": "^10.1.3",
    "@types/react-dom": "^16.0.5",
    "@types/socket.io": "^1.4.33",
    "@types/socket.io-client": "^1.4.32",
    "@types/uuid": "^3.4.3",
    "@types/webpack": "^4.1.4",
    "@types/webpack-env": "^1.13.5",
    "babel-loader": "^8.0.0-beta",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "fork-ts-checker-webpack-plugin": "^0.4.0",
    "internal-ip": "^3.0.1",
    "npm-run-all": "^4.1.3",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "ts-node-dev": "^1.0.0-pre.21",
    "url-loader": "^1.0.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15",
    "webpack-dev-middleware": "^3.0.1",
    "webpack-hot-middleware": "^2.22.2"
  },
  "engines": {
    "node": ">=9.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
