{
  "main": "dist/main.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/main.js",
    "start-dev": "NODE_ENV=development nodemon -i './persist' dist/main.js",
    "dev": "npm-run-all -l build --parallel watch:ts start-dev",
    "clean": "rm -rf dist/",
    "build": "npm run clean && tsc",
    "test": "run-s -l test:*",
    "test:jest": "jest --colors",
    "test:ts": "tsc --noEmit",
    "test:eslint": "eslint .",
    "watch:ts": "tsc -w",
    "watch:test": "jest --colors --watch"
  }
}
